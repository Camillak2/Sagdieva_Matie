<Window x:Class="Sagdieva_Matie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sagdieva_Matie"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Frame x:Name="NaFr"
               Grid.Row="1"/>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Margin="0 0 30 0">
            <Button x:Name="SvernutBtn"
            Content="Свернуть"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Grid.Row="0"
            Width="160"
            Height="55"
            Grid.RowSpan="1"
            FontSize="26"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Foreground="Black"
            FontFamily="Comic Sans MS" Click="SvernutBtn_Click"/>
            <Button x:Name="CloseBtn" Margin="15 0 0 0"
            Content="Закрыть"
            Grid.Column="4"
            Grid.ColumnSpan="1"
            Grid.Row="0"
            Width="160"
            Height="55"
            Grid.RowSpan="1"
            FontSize="26"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Foreground="Black"
            FontFamily="Comic Sans MS" Click="CloseBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
